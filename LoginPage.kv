<LoginPageManager>:
    Credentials:
        name: "credentials"
    Welcome:
        name: "welcome"

<Welcome>:
    Label:
        text: "Welcome"
    Button:
        size_hint: .5,.2
        text: "Log Out"
        pos_hint: {"x":.25}
        #"Looking into this"
        on_release: root.forward()

<Credentials>:
    BoxLayout:
        orientation: "vertical"
        spacing: "5dp"
        Label:
            text: ""
            size_hint: .4, .25
            pos_hint: {"x":.3}
        Label:
            text: "Username"
            pos_hint: {"x":.15}
            size_hint: .4, .1
        Label:
            text: "Password"
            pos_hint: {"x":.15}
            size_hint: .4, .1
        Label:
            text: ""
            size_hint: .3, .1
            pos_hint: {"x":.55}
        Label:
            text: ""
            size_hint: .4, .25
    BoxLayout:
        orientation: "vertical"
        spacing: "5dp"
        Label:
            text: ""
            size_hint: .4, .25
            pos_hint: {"x":.3}
            id: test
        TextInput:
            id: username
            text: ""
            pos_hint: {"x":.5}
            size_hint: .4, .1
        TextInput:
            id: password
            text: ""
            pos_hint: {"x":.5}
            size_hint: .4, .1
        Button:
            text: "Register New Account"
            size_hint: .3, .05
            pos_hint: {"x":.55}
            #on_release: root.answer_question(username.text), root.answer_question(password.text)
            #create new "register new account" screen for this ^^^
        Button:
            text: "Enter"
            size_hint: .3, .05
            pos_hint: {"x":.55}
            on_release: root.answer_question(username.text), root.answer_question(password.text)
            #find way to make this^^^ dependent on both being correct
        Label:
            text: ""
            size_hint: .4, .25